# StackPro Capability Environment Variables (Sandbox)
# These control feature flags and service discovery

# Feature Flags - Default OFF for new capabilities
CAP_MESSAGING_ENABLED=false
CAP_DATALAKE_ENABLED=false
CAP_DATA_INGESTION_ENABLED=false
ONBOARDING_V2_ENABLED=false
CAP_AUTH_JWT_ALLOWED=true
CAP_AUTH_IAM_ALLOWED=true

# Capability Base URLs (development/testing)
CAP_MESSAGING_BASE_URL=/api
CAP_DATALAKE_BASE_URL=/api

# Frontend Environment Variables
NEXT_PUBLIC_API_URL=/api
NEXT_PUBLIC_WS_URL=wss://ws-sandbox.stackpro.io
NEXT_PUBLIC_ENV=sandbox

# AWS Configuration
AWS_REGION=us-west-2
APPCONFIG_APPLICATION=stackpro
APPCONFIG_ENVIRONMENT=sandbox
APPCONFIG_CONFIGURATION=feature-flags
FLAGS_DYNAMO_TABLE=stackpro-flags

# Environment Context
NODE_ENV=sandbox
STACKPRO_ENV=sandbox
